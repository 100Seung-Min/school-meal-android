<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.school_meal">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SchoolApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_main"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_main_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.School_Meal"
        android:usesCleartextTraffic="true">
        <receiver
            android:name=".widget.MealAppWidget"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/meal_widget_info" />
        </receiver>

        <activity
            android:name=".ui.component.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.component.main.MainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.component.register.RegisterActivity"
            android:exported="false" />
    </application>

</manifest>